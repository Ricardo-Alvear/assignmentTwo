@model comp2147.ViewModels.Account.ResetPasswordVM
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Reset Password</h2>

<form asp-action="ResetPassword" method="post">
    <input type="hidden" asp-for="Token"></input>
    <input type="hidden" asp-for="Email"></input>
    
    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" type="password" class="form-control"></input>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ConfirmPassword" class="form-label"></label>
        <input asp-for="ConfirmPassword" type="password" class="form-control"></input>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Reset Password</button>
</form>