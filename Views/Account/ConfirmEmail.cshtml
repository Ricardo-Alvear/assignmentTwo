@model COMP2139___assignment2.ViewModels.Account.ConfirmEmailVM

@{
    ViewBag.Title = "Email Confirmation";
    Layout = "_Layout";
}

<h2>Email Confirmation</h2>

<div class="mt-4">
    @if (Model.Success)
    {
        <div class="alert alert-success">
            Your email has been confirmed successfully. You can now <a asp-controller="Account" asp-action="Login">Log in</a>.
        </div>
    }
    else
    {
        <div class="alert alert-danger">
            Email confirmation failed. @Model.Message
        </div>
    }
</div>