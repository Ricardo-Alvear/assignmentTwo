@model comp2147.Models.Event

<div class="card h-100 shadow-sm">
    <div class="card-body d-flex flex-column">
        <h5 class="card-title">@Model.Title</h5>
        <p class="text-muted">@Model.StartDate.ToString("MMMM dd, yyyy h:mm tt")</p>
        <p class="card-text flex-grow-1">@Model.Description</p>

        <div class="mt-auto d-flex justify-content-between">
            <a asp-controller="Events"
               asp-action="Details"
               asp-route-id="@Model.Id"
               class="btn btn-primary btn-sm">View</a>

            <a asp-controller="Cart"
               asp-action="Add"
               data-id="@Model.Id"
               class="btn btn-success btn-sm add-to-cart">Add</a>
        </div>
    </div>
</div>